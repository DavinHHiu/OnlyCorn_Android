<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/actionBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/usernameTv"
            android:text=""
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/image_container"
                    android:layout_width="200dp"
                    android:gravity="center_vertical"
                    android:layout_height="150dp"
                    android:elevation="7dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/avatarIv"
                        android:layout_marginStart="20dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/image_view_custom"
                        android:padding="3dp"/>
                    <TextView
                        android:id="@+id/nameTv"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:text="Bài viết"
                            android:layout_gravity="center"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/posts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/followingButton"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:text="Đang theo dõi"
                            android:layout_gravity="center"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/followings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/followerButton"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:text="Người theo dõi"
                            android:layout_gravity="center"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/followers"
                            android:text="0"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/profileInfo"
                android:layout_below="@+id/info"
                android:layout_marginTop="-40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/editButton"
                    android:text="Chỉnh sửa"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleViewPosts"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/profileInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>